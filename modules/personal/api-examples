      -H "Authorization: Bearer $DI_API" \
      -H "Content-Type: application/json"



curl -X DELETE "https://api.digitalocean.com/v2/droplets/$1" -H "Authorization: Bearer $DI_API" -H "Content-Type: application/x-www-form-urlencoded";


